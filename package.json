{
  "name": "@aresrpg/aresrpg",
  "version": "1.0.0",
  "description": "AresRPG is a Minecraft MMORPG Server",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js | pino-human",
    "lint": "eslint .",
    "format": "prettier . --write && eslint . --fix",
    "rendermedia": "mmdc --theme neutral -i media/flow.mermaid -o media/flow.svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aresrpg/aresrpg.git"
  },
  "keywords": [
    "aresrpg",
    "mmorpg",
    "minecraft"
  ],
  "author": "AresRPG's Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aresrpg/aresrpg/issues"
  },
  "homepage": "https://github.com/aresrpg/aresrpg#readme",
  "dependencies": {
    "combine-async-iterators": "^2.0.0",
    "iterator-helper": "^1.1.0",
    "minecraft-protocol": "^1.22.0",
    "minecraft-data": "^2.73.1",
    "pino": "^6.11.0",
    "prismarine-provider-anvil": "^2.3.1"
  },
  "devDependencies": {
    "@hydre/pino-human": "^1.1.0",
    "@mermaid-js/mermaid-cli": "^8.8.4",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": "prettier --write",
    "*.md": "prettier --write",
    "*.yml": "prettier --write"
  }
}

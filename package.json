{
  "name": "@aresrpg/aresrpg",
  "version": "1.0.0",
  "description": "AresRPG is a Minecraft MMORPG Server",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node -r dotenv/config src/index.js | pino-human",
    "debug": "node -r dotenv/config --inspect=0.0.0.0 src/index.js | pino-human",
    "lint": "eslint . && prettier . --check && npm run typecheck",
    "typecheck": "tsc --build",
    "format": "prettier . --write && eslint . --fix",
    "rendermedia": "mmdc -c media/mermaid.json -i media/flow.mermaid -o media/flow.svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aresrpg/aresrpg.git"
  },
  "keywords": [
    "aresrpg",
    "mmorpg",
    "minecraft"
  ],
  "babel": {
    "parserOpts": {
      "allowAwaitOutsideFunction": true
    }
  },
  "author": "AresRPG's Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aresrpg/aresrpg/issues"
  },
  "homepage": "https://github.com/aresrpg/aresrpg#readme",
  "dependencies": {
    "@aresrpg/aresrpg-map-colors": "^1.1.3",
    "canvas": "^2.6.1",
    "combine-async-iterators": "^2.0.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.20.0",
    "fastify-cors": "^5.2.0",
    "ioredis": "^4.27.8",
    "iterator-helper": "^1.3.4",
    "minecraft-data": "^2.74.0",
    "minecraft-protocol": "^1.23.1",
    "pino": "^6.11.1",
    "prismarine-provider-anvil": "^2.3.1",
    "vec3": "^0.1.7",
    "xmldom": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@hydre/pino-human": "^1.2.0",
    "@mermaid-js/mermaid-cli": "^8.11.0",
    "@types/node": "16.4.10",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": "prettier --write",
    "*.md": "prettier --write",
    "*.yml": "prettier --write"
  }
}
